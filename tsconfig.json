{
  "compilerOptions": {
    "module": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "target": "ES2020",
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["DOM", "ES2020"],
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "dist/**/*.*"
  ]
}
